@model IEnumerable<BancoCunha.Models.Conta>


@{
    ViewData["Title"] = "Banco Cunha - Transferência Bancária";
}
<link rel="stylesheet" href="~/css/cartao.css" />



<div>Transferência Bancária</div>

<div class="login-dark">
    <form method="post">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div class="form-group"><input class="form-control" id="numAgencia" name="numAgencia" placeholder="Agência"></div>
        <div class="form-group"><input class="form-control" id="numConta" name="numConta" placeholder="Conta"></div>

        @if (Model != null)
        {

            @foreach (var item in Model)
            {
                <div class="form-group"> @Html.DisplayFor(modelItem => item.Pessoa.NomePessoa) </div>

            }

        }
       
        <div class="form-group"><input class="form-control" id="valorMovimentacao" name="valorMovimentacao" placeholder="Valor Transferência"></div>

        <div class="form-group">

            <input class="btn btn-primary btn-block" vale="Pesquisar" type="submit" />

        </div>


    </form>


</div>
