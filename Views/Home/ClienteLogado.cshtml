@model IEnumerable<BancoCunha.Models.Conta>

@{
    ViewData["Title"] = "Banco Cunha - Área do Cliente";
}

<link rel="stylesheet" href="~/css/cartao.css" />



        @foreach (var item in Model)
        {


            <div class="login-dark">
                <form>
                    <div style="text-align:center">

                        <h5>  Olá @Html.DisplayFor(modelItem => item.Pessoa.NomePessoa)</h5>

                    </div>
                    <div class="illustration"><img src="~/img/avatarinit.png" /></div>

                    <p>

                        <br /><strong>Agência:</strong> @Html.DisplayFor(modelItem => item.NumeroAgencia)  <br /> <strong>Conta:</strong> @Html.DisplayFor(modelItem => item.NumeroConta)<br />
                    </p>


                    <p><strong>Seu saldo disponível</strong> </p>
                    <h4>
                        R$@Html.DisplayFor(modelItem => item.SaldoPessoa.ValorSaldo)
                    </h4>


                    <div class="form-group">

                        <a class="btn btn-primary btn-block" type="submit" href="@Url.Action("MovimentacaoBancaria", "Home")">
                            Fazer Transferência
                        </a>

                    </div>


                </form>
            </div>
        }







